{
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "ES2020"],
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "sourceMap": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "dist"
  }
}